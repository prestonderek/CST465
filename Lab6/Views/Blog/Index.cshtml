@model IEnumerable<Lab6.Models.BlogPostModel>

@{
    ViewData["Title"] = "Blog";
    var dateFormat = (string)ViewBag.DateFormat;
    var summaryWordCount = (int)ViewBag.SummaryWordCount;
}

<h1>Blog Posts</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">New Post</a>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var post in Model)
    {
        var words = post.Content.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        bool hasMore = words.Length > summaryWordCount;
        var summary = string.Join(" ", words.Take(summaryWordCount));

        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-action="Details" asp-route-id="@post.ID">
                            @post.Title
                        </a>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        @post.Author •
                        @post.Timestamp?.ToString(dateFormat)
                    </h6>
                    <p class="card-text">
                        @summary
                        @if (hasMore)
                        {
                            <a asp-action="Details" asp-route-id="@post.ID">
                                (read more...)
                            </a>
                        }
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@post.ID" class="btn btn-sm btn-outline-secondary">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    }
</div>
